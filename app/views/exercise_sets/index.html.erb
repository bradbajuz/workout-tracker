<div class="row">
  <div class="col-md-12">

    <% @exercise_sets.each do |e| %>
      <%= link_to edit_exercise_set_path(e), class: 'text-decoration-none' do %>
        <div class="card shadow-sm mb-3 text-center list-group-item list-group-item-action">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-12">
                <h5><%= e.exercise.name %></h5>
                <h6>
                  <small>
                    <strong>Date:</strong>
                    <%= e.date %>
                  </small>
                </h6>
                <h6>
                  <small>
                    <strong>Weight:</strong>
                    <%= e.weight %>
                  </small>
                </h6>
                <h6>
                  <small>
                    <strong>Time:</strong>
                    <%= e.time %>
                  </small>
                </h6>
                <h6>
                  <small>
                    <strong>Set:</strong>
                    <%= e.workout.name %>
                  </small>
                </h6>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <%== pagy_bootstrap_nav(@pagy) %>

  </div>
</div>
