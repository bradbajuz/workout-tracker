<%= form_for exercise, html: {id: 'exercise_form', class: 'col'} do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :name, 'Exercise Name' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :adjustment_point, 'Adjustment Point' %>
      <%= f.number_field :adjustment_point, class: 'form-control' %>
    </div>
  </div>
<% end %>
