<!DOCTYPE html>
<html>
  <head>
    <title>Workout Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
    <meta name="apple-mobile-web-app-title" content="WorkoutTracker">
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css2?family=Nunito&display=swap', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <%= render partial: 'layouts/navigation' %>
  <div class='container'>
    <%= render partial: 'layouts/flash_messages', flash: flash %>

    <%= yield %>
    </div>
  </body>
</html>
